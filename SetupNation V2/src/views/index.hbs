<div class="card">
  <div class="card-header">
    <h3 class="card-title">
      <i class="far fa-image"></i>
      SUBE TU SETUP !
    </h3>
  </div>
  <div class="card-body">
    <form action="/images" method="post" enctype="multipart/form-data">
      <div class="form-group mb-3">
        <div class="input-group">
          <div class="custom-file">
            <input
              class="form-control"
              type="file"
              id="formFile"
              name="image"
              required
            />
          </div>
        </div>
      </div>
      <div class="form-group mb-3">
        <input
          type="text"
          name="title"
          class="form-control"
          placeholder="Titulo"
          required
        />
      </div>
      <div class="form-group mb-3">
        <textarea
          name="descripcion"
          class="form-control"
          rows="2"
          placeholder="Describe tu setup"
          required
        ></textarea>
      </div>
      <div class="form-group mb-3">
        <button class="btn tn btn-outline-primary" type="submit">
          <i class="fa fa-upload"></i>
          Subir
        </button>
      </div>
    </form>
  </div>
</div>

<div class="card mt-2">
  <div class="card-header d-flex align-items-center">
    <span class="material-icons me-2">
      cloud
    </span>
    Recent Uploads
  </div>
  <div class="card-body p-5">
    <div class="row">
      {{#each images}}
        <div class="col-md-4 text-center">
          <a href="/images/{{uniqueId}}">
            <img
              src="upload/{{filename}}"
              alt="{{title}}"
              class="w-100 h-100"
              style="object-fit: cover;"
            />
          </a>
        </div>
      {{else}}
        <div class=" text-center p-5">
          <h1 class="">There are no Images <strong>yet</strong></h1>
          <p>Upload your first image</p>
          <span class="material-icons" style="font-size: 7rem;">
            add_a_photo
          </span>
        </div>
      {{/each}}
    </div>
  </div>
</div>