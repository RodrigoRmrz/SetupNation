<div class="row">

  <div class="col-md-4 offset-md-4">

    {{#if success}}
      <div class="alert alert-primary alert-dismissible fade show" role="alert">
        {{success}}
        <button
          type="button"
          class="close"
          data-dismiss="alert"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    {{/if}}

    <div class="card">
      <div class="card-body p-4">
        <h1>Inicia sesión</h1>
        <form action="/auth/signin" method="POST">
          <div class="mb-3">
            <label for="email">Escribe tu email:</label>
            <input
              type="text"
              name="email"
              class="form-control"
              placeholder="tuemail@company.com"
              autofocus
            />
          </div>
          <div class="mb-3">
            <label for="password">Escribe tu contraseña:</label>
            <input
              type="password"
              name="password"
              class="form-control"
              placeholder="Contraseña"
            />
          </div>
          <button class="btn btn-primary btn-block">
            Login
          </button>
        </form>

      </div>

    </div>

    <div>
      <p class="my-3">No tienes cuenta?
        <a href="/auth/signup" class="text-primary">Crea una</a></p>

    </div>
  </div>
</div>