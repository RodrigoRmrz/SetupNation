<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h2 class="card-title">{{image.title}}</h2>
    <button
      class="btn btn-danger btn-sm"
      id="btn-delete"
      data-id="{{image._id}}"
    >
      <i class="fa fa-times"></i>
      Delete
    </button>
  </div>
  <div class="card-body">
    <p>{{image.description}}</p>
    <div class="text-center">
      <img src="/uploads/{{image.filename}}" class="img-fluid" />
    </div>
  </div>
  <div class="card-footer d-flex justify-content-between align-items-center">
    <button class="btn btn-success" id="btn-like" data-id="{{image._id}}">
      <i class="fas fa-thumbs-up"></i>
      Like
    </button>
    <p>
      <span class="likes-count">{{image.likes}}</span>
      <i class="fas fa-heart"></i>
    </p>
    <p>
      <i class="fas fa-eye"></i>
      {{image.views}}
    </p>
    <p>
      <i class="far fa-clock"></i>
      {{timeago image.timestamp}}
    </p>
  </div>
</div>

<!-- COMENTARIOS -->
<div class="card mt-2">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h3 class="card-title">Comentarios</h3>
    <button class="btn btn-info" id="btn-toggle-comment">
      <i class="fa fa-comments-o"></i>
      Postea un comentario
    </button>
  </div>
  <div class="card-body">
    <blockquote id="post-comment">
      <form action="/images/{{image._id}}/comment" method="POST">
        <div class="form-group">
          <input
            type="text"
            class="form-control border"
            name="name"
            placeholder="Nombre"
          />
        </div>
        <div class="form-group">
          <input
            type="email"
            class="form-control border"
            name="email"
            placeholder="Email"
          />
        </div>
        <div class="form-group">
          <textarea
            name="comment"
            class="form-control t border"
            rows="2"
            placeholder="Your Comment"
          ></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-outline-success" id="btn-comment">
            <i class="fa fa-comment"></i>
            Post
          </button>
        </div>
      </form>
    </blockquote>
    <ul class="list-group p-4">
      {{#each comments}}
        <li class="list-group-item">
          <div class="row">
            <a href="#" class="col text-center">
              <img
                src="http://gravatar.com/avatar/{{this.gravatar}}?d=monsterid&s=45"
              />
            </a>
            <blockquote class="col">
              <p class="lead">{{this.comment}}</p>
              <footer class="blockquote-footer">
                {{this.name}}
                â€”
                {{timeago this.timestamp}}
              </footer>
            </blockquote>
          </div>
        </li>
      {{/each}}

    </ul>
  </div>
</div>